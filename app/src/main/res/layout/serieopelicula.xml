<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:background="@drawable/bbbbb">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:id="@+id/appBar">

    </android.support.v7.widget.Toolbar>




        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:padding="20dp"
            android:onClick="holaPeliculas"
            android:layout_gravity="center"
            android:layout_marginTop="300dp"
            android:id="@+id/holaaPeliculas"
            android:background="#000000"

            android:textColor="#ffffff"
            android:text="Watch Movies"
            android:layout_below="@+id/holamoovies"
            />




        <Button
            android:layout_width="150dp"

            android:background="#000000"
            android:layout_height="70dp"
            android:padding="20dp"
            android:layout_gravity="center"
            android:text="watch shows"
            android:layout_marginTop="20dp"
            android:onClick="holaSeries"
            android:textColor="#ffffff"
            android:id="@+id/holaaSeries"
            android:layout_below="@+id/holamoovies"
            />



</LinearLayout>